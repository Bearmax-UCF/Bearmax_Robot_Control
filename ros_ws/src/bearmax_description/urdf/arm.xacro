<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Arm base -->
    <joint name="arm_base_joint" type="revolute">
        <parent link="body" />
        <child link="arm_base" />
        <limit effort="1000.0" lower="${pi/-2}" upper="${pi/2}" velocity="0.5" />
        <origin xyz="0.2 0 0.45" rpy="0 ${pi/2} 0"/>
        <axis xyz="0 0 1" />
    </joint>

    <link name="arm_base">
        <visual>
            <geometry>
                <cylinder length="0.025" radius="0.05" />
            </geometry>
            <material name="brown" />
        </visual>
    </link>

</robot>

