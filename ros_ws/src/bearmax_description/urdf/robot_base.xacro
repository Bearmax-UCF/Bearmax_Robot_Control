<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="materials.xacro" />

    <!-- Base Link -->
    <link name="base_link"></link>

    <!-- Floor Plate -->
    <joint name="floor_plate_joint" type="fixed">
        <parent link="base_link" />
        <child link="floor_plate" />
        <origin xyz="0 0 -0.1"/>
    </joint>

    <link name="floor_plate">
        <visual>
            <origin xyz="0 0 0.025"/>
            <geometry>
                <cylinder length="0.05" radius="0.1" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0 0 0.025"/>
            <geometry>
                <cylinder length="0.05" radius="0.1" />
            </geometry>
        </collision>
    </link>

    <!-- Body -->
    <joint name="body_joint" type="continuous">
        <parent link="base_link"/>
        <child link="body"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="body">
        <visual>
            <origin xyz="0 0 0.05"/>
            <geometry>
                <cylinder radius="0.2" length="0.2"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.05"/>
            <geometry>
                <cylinder radius="0.2" length="0.2"/>
            </geometry>
        </collision>
    </link>

</robot>
